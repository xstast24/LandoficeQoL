{
  "manifest_version": 2,
  "name": "Landofice QoL",
  "description": "Provide convenient utils for landofice.com players.",
  "version": "0.8",
  "author": "Bota007",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "http://*.landofice.com/*"
  ],
  "icons": {
      "16": "data/icon16.png",
      "48": "data/icon48.png",
      "128": "data/icon128.png"
    },
  "web_accessible_resources": ["data/*"],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Landofice QoL"
  },
  "content_scripts": [
    {
      "js": [
        "config.js",
        "common.js",
        "game_common.js",
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "matches": [
        "http://*.landofice.com/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "config.js",
      "common.js",
      "background/background.js"
    ],
    "persistent": true
  }
}